{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "enabledManagers": ["generic"],
  "packageRules": [
    {
      "matchManagers": ["generic"],
      "matchFiles": ["multitool.lock.json"],
      "matchObjectExpressions": ["binaries.[*]"]
    },
    {
      "automerge": true,
      "enabled": true,
      "matchManagers": [
        "bazel",
        "regex"
      ],
      "matchUpdateTypes": ["patch", "minor"]
    }
  ],
  "regexManagers": [
    {
      "fileMatch": ["renovate-regex.json$"],
      "matchStrings": [
        "\"renovate_datasource\": \"(?<datasource>.*?)\",\\s    \"renovate_depname\": \"(?<depName>.*?)\",\\s(    \"renovate_versioning\": \"(?<versioning>.*?)\",\\s)?    \"sha256\": \"(?<currentDigest>.*?)\",\\s    \"version\": \"(?<currentValue>.*?)\"",
        "\"helm_repository\": \"(?<registryUrl>.*?)\",\\s    \"renovate_datasource\": \"(?<datasource>.*?)\",\\s    \"renovate_depname\": \"(?<depName>.*?)\",\\s(    \"renovate_versioning\": \"(?<versioning>.*?)\",\\s)?    \"version\": \"(?<currentValue>.*?)\""
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver-coerced{{/if}}"
    }
  ],
  "reviewers": [ "@chickenandpork" ]
}
